# UrbanFlow Backend Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose your database type: mongodb, postgresql, mysql, sqlite
DB_TYPE=mongodb

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/urbanflow
MONGODB_OPTIONS="useNewUrlParser=true&useUnifiedTopology=true"

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=urbanflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=urbanflow
MYSQL_USER=root
MYSQL_PASSWORD=password

# SQLite Configuration (Development Only)
SQLITE_PATH=./data/urbanflow.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# =============================================================================
# CORS & API CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
API_VERSION=v1
API_PREFIX=/api

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HELMET_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# =============================================================================
# MOBILE APP INTEGRATION
# =============================================================================
MOBILE_APP_ID=com.urbanflow.app
MOBILE_APP_VERSION=1.0.0

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Weather Services
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# Payment Services
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=urbanflow:*
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/urbanflow.log

# Database Seeding
SEED_SAMPLE_DATA=true
SEED_USERS_COUNT=5
SEED_TRIPS_COUNT=20

# Testing
TEST_DATABASE_URL=your_test_database_url_here
JEST_TIMEOUT=10000

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG=false

# Performance
# CLUSTER_MODE=true
# WORKER_PROCESSES=4

# Monitoring
# ENABLE_METRICS=true
# METRICS_PORT=9090
# PROMETHEUS_ENABLED=true

# Health Checks
# HEALTH_CHECK_ENDPOINT=/health
# HEALTH_CHECK_INTERVAL=30000
# HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
ENABLE_METRICS=false
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Change all secret keys in production
# 2. Use strong passwords for database connections
# 3. Enable HTTPS in production
# 4. Set up proper logging and monitoring
# 5. Configure backup strategies
# 6. Use environment-specific .env files
