# UrbanFlow Backend - SQLite Development Configuration

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_TYPE=sqlite
SQLITE_PATH=./data/urbanflow.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=urbanflow_dev_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# =============================================================================
# CORS & API CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
API_VERSION=v1
API_PREFIX=/api

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HELMET_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
SESSION_SECRET=urbanflow_session_secret_dev
SESSION_MAX_AGE=86400000

# =============================================================================
# MOBILE APP INTEGRATION
# =============================================================================
MOBILE_APP_ID=com.urbanflow.app
MOBILE_APP_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=urbanflow:*
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/urbanflow.log

# Database Seeding
SEED_SAMPLE_DATA=true
SEED_USERS_COUNT=5
SEED_TRIPS_COUNT=20

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
ENABLE_METRICS=false
METRICS_PORT=9090
PROMETHEUS_ENABLED=false
